<style>
  .documents-container {
    margin-bottom: 48px;
  }

  .documents-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 32px;
  }

  :global(.dark) .documents-title {
    color: white;
  }

  .documents-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 16px;
    margin-bottom: 24px;
  }

  .document-card {
    background: white;
    border: 1px solid rgb(229 231 235);
    border-radius: 12px;
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 12px;
    transition: all 0.3s ease;
    position: relative;
    group: doc-card;
  }

  :global(.dark) .document-card {
    background: rgb(31 41 55);
    border-color: rgb(55 65 81);
  }

  .document-card:hover {
    border-color: rgb(59 130 246);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.1);
    transform: translateY(-4px);
  }

  :global(.dark) .document-card:hover {
    border-color: rgb(96 165 250);
    box-shadow: 0 4px 12px rgba(96, 165, 250, 0.1);
  }

  .doc-icon {
    font-size: 2rem;
  }

  .doc-info {
    flex: 1;
  }

  .doc-name {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(31 41 55);
  }

  :global(.dark) .doc-name {
    color: white;
  }

  .doc-size {
    margin: 4px 0 0 0;
    font-size: 0.8rem;
    color: rgb(107 114 128);
  }

  :global(.dark) .doc-size {
    color: rgb(156 163 175);
  }

  .doc-action-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 32px;
    height: 32px;
    border: none;
    border-radius: 6px;
    background: rgb(219 234 254);
    color: rgb(59 130 246);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    opacity: 0;
    transform: scale(0.8);
  }

  :global(.dark) .doc-action-btn {
    background: rgb(30 58 138);
    color: rgb(147 197 253);
  }

  .document-card:hover .doc-action-btn {
    opacity: 1;
    transform: scale(1);
  }

  .doc-action-btn:hover {
    background: rgb(59 130 246);
    color: white;
    transform: scale(1.1);
  }

  :global(.dark) .doc-action-btn:hover {
    background: rgb(96 165 250);
  }

  .documents-footer {
    display: flex;
    justify-content: center;
  }

  .download-all-btn {
    padding: 14px 32px;
    background: linear-gradient(135deg, rgb(59 130 246), rgb(37 99 235));
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .download-all-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(59, 130, 246, 0.4);
  }

  .download-all-btn:active {
    transform: translateY(0);
  }
</style>

<script>
  const downloadBtn = document.getElementById('download-all-btn') as HTMLButtonElement;
  const docActionBtns = document.querySelectorAll('.doc-action-btn') as NodeListOf<HTMLButtonElement>;

  if (downloadBtn) {
    downloadBtn.addEventListener('click', () => {
      downloadBtn.disabled = true;
      downloadBtn.textContent = '‚è≥ Preparando descarga...';
      
      // Simular descarga
      setTimeout(() => {
        downloadBtn.disabled = false;
        downloadBtn.textContent = '‚úì ¬°Descargados! üì•';
        
        setTimeout(() => {
          downloadBtn.textContent = 'üì• Descargar Todos los Documentos';
        }, 2000);
      }, 1500);
    });
  }

  // Evento para descargar documentos individuales
  docActionBtns.forEach((btn) => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const card = (e.target as HTMLElement).closest('.document-card');
      const docName = card?.querySelector('.doc-name')?.textContent || 'Documento';
      
      console.log(`Descargando: ${docName}`);
      
      // Simular descarga
      const originalHTML = btn.innerHTML;
      btn.innerHTML = '‚úì';
      setTimeout(() => {
        btn.innerHTML = originalHTML;
      }, 1500);
    });
  });
</script>

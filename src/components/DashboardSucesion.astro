<div class="dashboard-container">
  <div class="header-info">
    <div class="info-banner">
      <span class="info-icon">‚ÑπÔ∏è</span>
      <div>
        <p class="info-title">Consulta el estado de tu tr√°mite en cualquier momento</p>
        <p class="info-radicado">Radicado: <strong id="radicado-number">SUC-2025-00423</strong></p>
      </div>
    </div>
  </div>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-icon">üìä</span>
        <h3 class="stat-label">Progreso del Tr√°mite</h3>
      </div>
      <div class="progress-container">
        <div class="progress-bar">
          <div id="progress-fill" class="progress-fill"></div>
        </div>
        <span id="progress-percent" class="progress-text">65%</span>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-icon">üìÖ</span>
        <h3 class="stat-label">D√≠as Estimados</h3>
      </div>
      <div class="stat-value">
        <span id="days-remaining" class="big-number">5</span>
        <span class="stat-subtext">d√≠as restantes</span>
      </div>

    <div class="stat-card">
      <div class="stat-header">
        <span class="stat-icon">üìÑ</span>
        <h3 class="stat-label">Documentos</h3>
      </div>
      <div class="stat-value">
        <span id="docs-count" class="big-number">8</span>
        <span class="stat-subtext">disponibles</span>
      </div>
    </div>
  </div>
</div>

<style>
  .dashboard-container {
    width: 100%;
  }

  .header-info {
    margin-bottom: 32px;
  }

  .info-banner {
    background: linear-gradient(135deg, rgb(219 234 254) 0%, rgb(191 219 254) 100%);
    border-left: 4px solid rgb(59 130 246);
    padding: 16px 20px;
    border-radius: 8px;
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }

  :global(.dark) .info-banner {
    background: linear-gradient(135deg, rgb(30 58 138) 0%, rgb(59 130 246 / 0.2) 100%);
    border-left-color: rgb(147 197 253);
  }

  .info-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .info-title {
    margin: 0 0 4px 0;
    font-weight: 600;
    color: rgb(31 41 55);
    font-size: 0.95rem;
  }

  :global(.dark) .info-title {
    color: white;
  }

  .info-radicado {
    margin: 0;
    color: rgb(59 130 246);
    font-size: 0.9rem;
    font-weight: 500;
  }

  :global(.dark) .info-radicado {
    color: rgb(147 197 253);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
  }

  .stat-card {
    background: white;
    border: 1px solid rgb(229 231 235);
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  :global(.dark) .stat-card {
    background: rgb(31 41 55);
    border-color: rgb(55 65 81);
  }

  .stat-card:hover {
    border-color: rgb(59 130 246);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.1);
    transform: translateY(-2px);
  }

  :global(.dark) .stat-card:hover {
    border-color: rgb(96 165 250);
    box-shadow: 0 4px 12px rgba(96, 165, 250, 0.1);
  }

  .stat-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .stat-icon {
    font-size: 1.75rem;
  }

  .stat-label {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: rgb(107 114 128);
  }

  :global(.dark) .stat-label {
    color: rgb(156 163 175);
  }

  .progress-container {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .progress-bar {
    flex: 1;
    height: 8px;
    background: rgb(229 231 235);
    border-radius: 4px;
    overflow: hidden;
  }

  :global(.dark) .progress-bar {
    background: rgb(55 65 81);
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, rgb(59 130 246), rgb(37 99 235));
    width: 65%;
    border-radius: 4px;
    transition: width 0.6s ease;
  }

  .progress-text {
    font-weight: 700;
    color: rgb(59 130 246);
    font-size: 0.95rem;
    min-width: 40px;
  }

  :global(.dark) .progress-text {
    color: rgb(147 197 253);
  }

  .stat-value {
    display: flex;
    align-items: baseline;
    gap: 8px;
  }

  .big-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(59 130 246);
  }

  :global(.dark) .big-number {
    color: rgb(147 197 253);
  }

  .stat-subtext {
    font-size: 0.85rem;
    color: rgb(107 114 128);
  }

  :global(.dark) .stat-subtext {
    color: rgb(156 163 175);
  }
</style>

<script>
  // Simular datos din√°micos del backend
  interface SucesionData {
    radicado: string;
    progreso: number;
    diasRestantes: number;
    documentosDisponibles: number;
  }

  const sucesionData: SucesionData = {
    radicado: "SUC-2025-00423",
    progreso: 65,
    diasRestantes: 5,
    documentosDisponibles: 8
  };

  // Actualizar datos en el dashboard
  const radicadoEl = document.getElementById('radicado-number') as HTMLElement;
  const progressFill = document.getElementById('progress-fill') as HTMLElement;
  const progressPercent = document.getElementById('progress-percent') as HTMLElement;
  const daysRemaining = document.getElementById('days-remaining') as HTMLElement;
  const docsCount = document.getElementById('docs-count') as HTMLElement;

  if (radicadoEl) radicadoEl.textContent = sucesionData.radicado;
  if (progressFill) progressFill.style.width = `${sucesionData.progreso}%`;
  if (progressPercent) progressPercent.textContent = `${sucesionData.progreso}%`;
  if (daysRemaining) daysRemaining.textContent = sucesionData.diasRestantes.toString();
  if (docsCount) docsCount.textContent = sucesionData.documentosDisponibles.toString();

  // Evento para comunicar cambios
  window.dispatchEvent(
    new CustomEvent('dashboardLoaded', {
      detail: sucesionData
    })
  );
</script>

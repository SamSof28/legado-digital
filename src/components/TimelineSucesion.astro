<style>
  .timeline-container {
    margin-bottom: 48px;
  }

  .timeline-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 32px;
  }

  :global(.dark) .timeline-title {
    color: white;
  }

  .timeline {
    position: relative;
    padding: 0;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 40px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, rgb(59 130 246), rgb(229 231 235));
  }

  :global(.dark) .timeline::before {
    background: linear-gradient(180deg, rgb(96 165 250), rgb(55 65 81));
  }

  .timeline-item {
    position: relative;
    padding-left: 100px;
    padding-bottom: 32px;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: 22px;
    top: 0;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .completed-marker {
    background: rgb(34 197 94);
    color: white;
  }

  .in-progress-marker {
    background: white;
    border: 3px solid rgb(59 130 246);
    color: rgb(59 130 246);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  :global(.dark) .in-progress-marker {
    background: rgb(31 41 55);
  }

  .progress-dot {
    width: 12px;
    height: 12px;
    background: rgb(59 130 246);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.3);
      opacity: 0.7;
    }
  }

  .pending-marker {
    background: rgb(229 231 235);
    color: rgb(107 114 128);
    border: 2px solid rgb(209 213 219);
  }

  :global(.dark) .pending-marker {
    background: rgb(55 65 81);
    border-color: rgb(75 85 99);
    color: rgb(156 163 175);
  }

  .timeline-content {
    background: white;
    border: 1px solid rgb(229 231 235);
    border-radius: 8px;
    padding: 20px;
    transition: all 0.3s ease;
  }

  :global(.dark) .timeline-content {
    background: rgb(31 41 55);
    border-color: rgb(55 65 81);
  }

  .timeline-item.completed .timeline-content {
    border-left: 4px solid rgb(34 197 94);
  }

  .timeline-item.in-progress .timeline-content {
    border-left: 4px solid rgb(59 130 246);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.1);
  }

  :global(.dark) .timeline-item.in-progress .timeline-content {
    box-shadow: 0 4px 12px rgba(96, 165, 250, 0.1);
  }

  .timeline-item.pending .timeline-content {
    border-left: 4px solid rgb(209 213 219);
    opacity: 0.7;
  }

  :global(.dark) .timeline-item.pending .timeline-content {
    border-left-color: rgb(75 85 99);
  }

  .timeline-date {
    font-size: 0.85rem;
    color: rgb(107 114 128);
    margin-bottom: 8px;
    font-weight: 500;
  }

  :global(.dark) .timeline-date {
    color: rgb(156 163 175);
  }

  .timeline-step-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: rgb(31 41 55);
    margin-bottom: 8px;
  }

  :global(.dark) .timeline-step-title {
    color: white;
  }

  .timeline-description {
    font-size: 0.95rem;
    color: rgb(75 85 99);
    line-height: 1.6;
  }

  :global(.dark) .timeline-description {

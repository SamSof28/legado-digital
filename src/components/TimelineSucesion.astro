    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .progress-bar-timeline {
    height: 6px;
    background: rgb(229 231 235);
    border-radius: 3px;
    overflow: hidden;
  }

  :global(.dark) .progress-bar-timeline {
    background: rgb(55 65 81);
  }

  .progress-animated {
    height: 100%;
    background: linear-gradient(90deg, rgb(59 130 246), rgb(37 99 235));
    width: 40%;
    animation: progressAnimation 2s infinite;
    border-radius: 3px;
  }

  @keyframes progressAnimation {
    0%, 100% {
      width: 40%;
    }
    50% {
      width: 60%;
    }
  }

  .progress-label {
    font-size: 0.8rem;
    color: rgb(59 130 246);
    font-weight: 600;
  }

  :global(.dark) .progress-label {
